<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>The Image Posts - New Post</title>

    <!-- CSS Stuff -->
    <link rel="stylesheet" href="/css/style.css">

    <link rel="icon" href="/images/tofuPancake.png" type="image/x-icon">
</head>

<body>

    <!-- Navbar -->
    <div class="navbar">
        <div class="navbarContent">
            <div class="navbarHome">
                <a href="/">
                    <img src="/images/tofuPancake.png" alt="Website Logo">
                </a>
            </div>

            <div class="navbarLinks">
                <% if(currentUserID==null) {%>
                    <div class="navbarEntry">
                        <a href="/register">
                            <p>Sign Up</p>
                        </a>
                    </div>
                    <div class="navbarEntry">
                        <a href="/login">
                            <p>Login</p>
                        </a>
                    </div>
                    <% } else {%>
                    <% if(currentUserID !=null) {%>
                        <div class="navbarEntryNoHover">
                            <p>Welcome, <%= currentUsername %>!</p>
                        </div>
                    <% } %>
                    <div class="navbarEntry">
                        <a href="/post/create">
                            <p>New Post</p>
                        </a>
                    </div>
                    <div class="navbarEntry">
                        <a href="/logout">
                            <p>Logout</p>
                        </a>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>

<!-- Login -->
<div class="container">
    <div class="containerPadding">
        <!-- Error Messages -->
        <% if ( message.length> 0 ) { %>
            <div class="messageDefault">
                <div class="messageDefaultPadding">
                    <div class="messageHeader">
                        <h3>Warnings!</h3>
                        <% for(var i=0; i < message.length; i++) {%>
                            <div class="postMessagesSection">
                                <p>
                                    <%= message[i] %>
                                </p>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        <% } %>

        <div class="formDefault">
            <div class="formDefaultPadding">
                <div class="formHeader">
                    <div class="formTitle">
                        <h1>New Post</h1>
                    </div>
                    <div class="formSubtitle">
                        <p>Create a new post! Each post must have a caption and an image!</p>
                    </div>
                </div>
                <div class="formContent">
                    <form action="/post/create" method="post" enctype="multipart/form-data">
                        <div class="formContentEntry">
                            <label for="image">
                                <p class="formText">Image Upload</p>
                                <hr>
                            </label>
                            <input class="miscButton" type="file" name="image" id="image" />
                        </div>
                        <div class="formContentEntry">
                            <label for="caption">
                                <p class="formText">Caption</p>
                                <hr>
                            </label>
                            <input class="formTextEntry" type="text" id="caption" name="caption" value="" placeholder="Type caption here!">
                        </div>
                        <div class="formContentEntry">
                            <input class="submitButton" type="submit" value="Submit">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<div class="footer">
    <p>Christofer Alvin - for TCD Submission - 2024</p>
</div>
</body>

</html>